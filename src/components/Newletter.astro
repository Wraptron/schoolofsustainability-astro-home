---
interface Props {
  title?: string;
  newsletterTitle?: string;
  buttonText?: string;
  placeholderText?: string;
  googleLinkText?: string;
}

const {
  title = "Subscribe to our Newsletters",
  newsletterTitle = "The latest news, articles, and resources, sent to your inbox.",
  buttonText = "Subscribe",
  placeholderText = "Enter your email",
  googleLinkText = "Google Form",
} = Astro.props;
---

<section class="bg-emerald-900 py-8 rounded-lg mb-8 mx-6 md:mx-12">
  <div class="container mx-auto px-6 md:px-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-x-8 gap-y-8">
      <!-- Section Header -->
      <div class="col-span-1 lg:col-span-2">
        <h2 class="text-white font-bold text-2xl md:text-3xl">{title}</h2>
      </div>

      <!-- Newsletter Subscription -->
      <div class="max-w-xl">
        <h3 class="text-3xl font-semibold text-white tracking-tight">
          {newsletterTitle}
        </h3>
        <form class="mt-6 flex flex-col sm:flex-row gap-4">
          <div class="flex-auto">
            <label for="email-address" class="sr-only">Email address</label>
            <input
              id="email-address"
              name="email"
              type="email"
              autocomplete="email"
              required
              class="w-full rounded-md bg-white/10 px-3.5 py-2 text-white outline-1 placeholder:text-gray-300 focus:outline-2 focus:outline-white sm:text-sm"
              placeholder={placeholderText}
            />
          </div>
          <button
            type="submit"
            class="flex-none rounded-md bg-crimson px-3.5 py-2.5 text-sm font-semibold shadow text-black hover:bg-crimson/90 focus-visible:outline focus-visible:outline-offset-2 focus-visible:outline-crimson"
            style="background-color: #e7c609;"
          >
            {buttonText}
            <!-- <span class="ml-2 text-xl">â†’</span> -->
          </button>
        </form>
        <div class="mt-4">
          <a
            href="https://wraptron.com"
            class="text-white hover:underline"
            target="_blank"
            rel="noopener noreferrer"
          >
            {googleLinkText}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

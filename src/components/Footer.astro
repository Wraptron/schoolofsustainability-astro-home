---
// Footer.astro
interface Props {
  email?: string;
  address?: string;
  quickLinks?: Array<{
    title: string;
    href: string;
  }>;
  logoPath?: string;
  logoAlt?: string;
}

const {
  email = "ssadmin@smail.iitm.ac.in",
  address = "IIT Madras School of Sustainability IIT Madras, Department of Biotechnology Block 2, Room 411A, Chennai 600036, India.",
  titleName = "School of Sustainability",
  quickLinks = [
    { title: "About", href: "/about" },
    { title: "Research", href: "/research" },
    { title: "Programs Offered", href: "/programs" },
    { title: "Outreach", href: "/outreach" },
    { title: "Knowledge Hub", href: "/knowledge-hub" },
    { title: "Sustainability @IITM", href: "/sustainability-iitm" },
  ],
  logoPath = "/public/SoS.svg",
  logoAlt = "School of Sustainability logo",
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class="bg-black w-full">
  <!-- Grid for main content -->
  <div
    class="grid grid-cols-1 md:grid-cols-4 px-4 md:px-16 pt-12 md:pt-24 pb-12 md:pb-20 gap-8"
  >
    <!-- Column 1: Brand and Contact Info -->
    <div class="col-span-2">
      <h2 class="text-white text-lg md:text-xl">
        <img src={logoPath} alt={logoAlt} class="h-8 md:h-6 max-w-xl" />
        {titleName}
      </h2>

      <!-- Email -->
      <div class="flex items-center space-x-2 mt-4">
        <svg
          class="w-6 h-6 text-yellow-300"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path
            d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
          ></path>
        </svg>
        <a
          class="text-white text-sm md:text-base font-light block transition-colors hover:text-yellow-300"
          href={`mailto:${email}`}
        >
          {email}
        </a>
      </div>

      <!-- Address -->
      <div class="flex items-start space-x-2 mt-3">
        <svg
          class="w-6 h-6 text-yellow-300 mt-1 flex-shrink-0"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path
            d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
          ></path>
        </svg>
        <p class="text-white text-sm md:text-base font-light">
          {address}
        </p>
      </div>
    </div>

    <!-- Column 2: Quick Links -->
    <div class="text-left grid-cols-2 text-zinc-100">
      <h4 class="text-sm md:text-base font-bold mb-4">Quick links</h4>
      <ul class="text-left mt-2 space-y-2">
        {
          quickLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-white text-sm md:text-base hover:text-yellow-300 transition-colors"
              >
                {link.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <!-- Footer Bottom Section -->
  <div class="border-t border-zinc-800 py-6">
    <div class="px-4 md:px-16 flex flex-col md:flex-row items-center gap-4">
      <!-- Copyright -->
      <div
        class="text-xs md:text-sm text-zinc-400 flex-1 text-center md:text-left"
      >
        &copy; {currentYear} School of Sustainability, All rights reserved
      </div>

      <!-- Made with love -->
      <div
        class="flex-1 text-zinc-400 text-xs md:text-sm text-center md:text-right"
      >
        Made with <span class="text-red-500">&hearts;</span> in India
      </div>
    </div>
  </div>
</footer>

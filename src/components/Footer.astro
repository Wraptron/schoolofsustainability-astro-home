---
import { Fragment } from "astro/jsx-runtime";

interface Props {
  email?: string;
  address?: string;
  titleName?: string;
  quickLinks?: Array<{ title: string; href: string }>;
  additionalLinks?: Array<{ title: string; href: string }>;
  logoPath?: string;
  logoAlt?: string;
}

const {
  email = "ssadmin@smail.iitm.ac.in",
  address = "School of Sustainability IIT Madras,Department of Biotechnology Block 2, Room 411A,Chennai 600036, India.",
  titleName = "School of Sustainability",
  quickLinks = [
    { title: "About", href: "/about" },
    { title: "Research", href: "/research" },
    { title: "Programs Offered", href: "/programs" },
    { title: "Outreach", href: "/outreach" },
  ],
  additionalLinks = [
    { title: "Organization", href: "/organization" },
    { title: "Knowledge Hub", href: "/knowledgehub" },
    { title: "Sustainability @IITM", href: "/sustainability-iitm" },
    { title: "Competitions", href: "/media" },
  ],
  logoPath = "/SoS.svg",
  logoAlt = "School of Sustainability",
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer class="bg-white border-t border-gray-100">
  <!-- Main Content Container -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main Footer Content -->
    <div class="py-12 lg:py-16">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
        <!-- Logo and Contact Section -->
        <div class="lg:col-span-6 xl:col-span-5">
          <!-- Logo and Title -->
          <div class="flex items-center gap-4 mb-6">
            <img
              src={logoPath}
              alt={logoAlt}
              class="w-16 h-16 lg:w-20 lg:h-20 flex-shrink-0"
            />
            <h3 class="text-lg lg:text-xl font-semibold text-gray-900">
              {titleName}
            </h3>
          </div>

          <!-- Email -->
          <div class="flex items-center gap-3 mb-4">
            <div class="flex-shrink-0">
              <svg
                class="w-5 h-5 text-green-600"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
                ></path>
              </svg>
            </div>
            <a
              href={`mailto:${email}`}
              class="text-gray-700 hover:text-green-600 transition-colors duration-200 text-sm lg:text-base"
            >
              {email}
            </a>
          </div>

          <!-- Address -->
          <div class="flex items-start gap-3 mb-6">
            <div class="flex-shrink-0 mt-0.5">
              <svg
                class="w-5 h-5 text-green-600"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"
                ></path>
              </svg>
            </div>
            <p class="text-gray-700 text-sm lg:text-base leading-relaxed">
              {address}
            </p>
          </div>

          <!-- Social Media Links -->
          <div class="flex items-center gap-4">
            <a
              href="https://linkedin.com"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="LinkedIn"
              class="hover:opacity-75 transition-opacity duration-200"
            >
              <img
                src="/images/linkedin.png"
                alt="LinkedIn"
                class="w-10 h-10 lg:w-12 lg:h-12"
              />
            </a>
            <a
              href="https://twitter.com"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Twitter"
              class="hover:opacity-75 transition-opacity duration-200"
            >
              <img
                src="/images/twitter.png"
                alt="Twitter"
                class="w-10 h-10 lg:w-12 lg:h-12"
              />
            </a>
          </div>
        </div>

        <!-- Navigation Links Section -->
        <div class="lg:col-span-6 xl:col-span-7">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 lg:gap-12">
            <!-- First Quick Links Column -->
            <div>
              <h3 class="text-base font-semibold text-gray-900 mb-4">
                Quick Links
              </h3>
              <ul class="space-y-3">
                {
                  quickLinks.map((link) => (
                    <li>
                      <a
                        href={link.href}
                        class="text-gray-600 hover:text-green-600 transition-colors duration-200 text-sm lg:text-base"
                      >
                        {link.title}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>

            <!-- Second Quick Links Column -->
            <div>
              <h3 class="text-base font-semibold text-gray-900 mb-4">
                More Links
              </h3>
              <ul class="space-y-3">
                {
                  additionalLinks.map((link) => (
                    <li>
                      <a
                        href={link.href}
                        class="text-gray-600 hover:text-green-600 transition-colors duration-200 text-sm lg:text-base"
                      >
                        {link.title}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Copyright Section -->
    <div class="border-t border-gray-200 py-6">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <p class="text-sm text-gray-500 text-center sm:text-left">
          &copy; {currentYear} School of Sustainability. All rights reserved.
        </p>
        <p class="text-sm text-gray-500 text-center sm:text-right">
          Made with <span class="text-red-500" aria-label="love">&hearts;</span>
          in India
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  #scrollToTopBtn {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 56px;
    height: 56px;
    display: none;
    z-index: 1000;
    border: none;
    border-radius: 50%;
    background: linear-gradient(135deg, #032a03, #3daa6f);
    color: #fff;
    cursor: pointer;
    font-size: 20px;
    box-shadow:
      0 8px 32px rgba(99, 102, 241, 0.3),
      0 4px 16px rgba(0, 0, 0, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px) scale(0.9);
    user-select: none;
    -webkit-tap-highlight-color: transparent;
  }

  #scrollToTopBtn:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow:
      0 12px 40px rgba(99, 102, 241, 0.4),
      0 8px 24px rgba(0, 0, 0, 0.15);
  }

  #scrollToTopBtn:active {
    transform: translateY(0) scale(0.95);
  }

  #scrollToTopBtn.show {
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    #scrollToTopBtn {
      background: linear-gradient(135deg, #4f46e5, #7c3aed);
      box-shadow:
        0 8px 32px rgba(79, 70, 229, 0.4),
        0 4px 16px rgba(0, 0, 0, 0.3);
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    #scrollToTopBtn {
      transition: opacity 0.2s ease;
      transform: none;
    }

    #scrollToTopBtn:hover {
      transform: none;
    }
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    #scrollToTopBtn {
      bottom: 16px;
      right: 16px;
      width: 48px;
      height: 48px;
      font-size: 18px;
    }
  }
</style>

<button id="scrollToTopBtn" aria-label="Scroll to top" type="button">
  <svg
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M7 14L12 9L17 14"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"></path>
  </svg>
</button>

<!-- Updated script reference with better error handling -->
<script
  type="module"
  src="/src/scripts/scrollToTop.js"
  is:client
  onerror="console.warn('Scroll to top script failed to load')"></script>

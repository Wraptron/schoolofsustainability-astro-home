---
import Layout from "../layouts/Layout.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "../components/Footer.astro";
import andrew from "../assets/Talk_Andrew Forrest Talk 2 (1).svg";
import man from "../assets/medium-shot-man-with-paperwork.svg";
import female from "../assets/female-student.svg";
import cert1 from "../assets/front-view-woman-holding-tablet-hand-looking-aside 1 (1).svg";
import Santosh from "../assets/Santosh Photos 1.svg";
import sstownhall from "../assets/SS Townhall  1.svg";
import "../styles/global.css";
---

<Layout>
  <Navbar />

  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <img
      src={cover.src}
      alt="School of Sustainability IIT Madras"
      class="w-full h-80 sm:h-96 lg:h-[500px] object-cover"
      loading="eager"
    />
    <div
      class="absolute inset-x-4 bottom-4 sm:bottom-8 lg:top-[320px] lg:left-8 bg-green-600 p-6 sm:p-8 lg:w-1/2 rounded-lg"
    >
      <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-white">
        School of Sustainability IIT Madras
      </h1>
      <p class="text-sm sm:text-base mt-3 text-gray-100">
        Leading research and innovation in sustainable technologies and
        environmental solutions.
      </p>
    </div>
  </section>

  <!-- Navigation Links -->
  <nav class="mt-8 sm:mt-20">
    <div
      class="flex flex-wrap justify-center items-center gap-3 sm:gap-5 text-xs sm:text-sm text-[#3DAA6F] px-4"
    >
      <a
        href="#research"
        class="hover:text-green-600 transition-colors cursor-pointer"
        >Research & Development</a
      >
      <span class="text-gray-400">|</span>
      <a
        href="#projects"
        class="hover:text-green-600 transition-colors cursor-pointer"
        >Projects</a
      >
      <span class="text-gray-400">|</span>
      <a
        href="#centers"
        class="hover:text-green-600 transition-colors cursor-pointer"
        >Affiliated Centers</a
      >
    </div>
  </nav>

  <!-- Research & Development Section -->
  <section id="research" class="px-4 sm:px-8 py-8 sm:py-12">
    <h2 class="text-lg sm:text-xl font-bold mb-6">Research & Development</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
      {
        [
          {
            image: project1,
            title: "Sponsored Projects",
            url: "https://docs.google.com/spreadsheets/d/e/2PACX-1vRc2gej6kzZ2lUM2fgMSwuSuHYRKXuj0uGOYcHmTb6I7ohMl94A8E1EB4Qw0cC6xw/pubhtml?gid=392541364&single=true",
          },
          {
            image: project4,
            title: "Consultancy Projects",
            url: "https://docs.google.com/spreadsheets/d/e/2PACX-1vRc2gej6kzZ2lUM2fgMSwuSuHYRKXuj0uGOYcHmTb6I7ohMl94A8E1EB4Qw0cC6xw/pubhtml?gid=591462497&single=true",
          },
          {
            image: project4,
            title: "Patents Filed",
            url: "https://docs.google.com/spreadsheets/d/e/2PACX-1vRc2gej6kzZ2lUM2fgMSwuSuHYRKXuj0uGOYcHmTb6I7ohMl94A8E1EB4Qw0cC6xw/pubhtml?gid=1624878732&single=true",
          },
          {
            image: project4,
            title: "Patents Granted",
            url: "https://docs.google.com/spreadsheets/d/e/2PACX-1vRc2gej6kzZ2lUM2fgMSwuSuHYRKXuj0uGOYcHmTb6I7ohMl94A8E1EB4Qw0cC6xw/pubhtml?gid=1624878732&single=true",
          },
        ].map((project, index) => (
          <article class="bg-gray-100 rounded-lg overflow-hidden hover:shadow-lg transition-shadow group">
            <a
              href={project.url}
              target="_blank"
              rel="noopener noreferrer"
              class="block"
            >
              <img
                src={project.image.src}
                alt={project.title}
                class="w-full h-40 sm:h-48 object-cover p-4 group-hover:scale-105 transition-transform cursor-pointer"
                loading="lazy"
              />
            </a>
            <div class="p-4">
              <a
                href={project.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm font-medium text-blue-600 hover:text-blue-800 underline transition-colors block"
              >
                Executive Education
              </h3>
              <div class="prose prose-gray max-w-none">
                <p class="text-gray-700 text-sm lg:text-base leading-relaxed">
                  Our executive education programs are designed for working
                  professionals seeking to enhance their understanding of
                  sustainability principles and practices. These intensive
                  courses provide practical knowledge and tools for implementing
                  sustainable solutions in various organizational contexts.
                </p>
                <p class="text-sm lg:text-base">
                  <a
                    href="https://sustainability.iitm.ac.in/executive-education"
                    class="text-green-600 hover:text-green-700 underline"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Learn More
                  </a>
                </p>
              </div>
            </div>
          </article>
        </div>
      </section>

      <!-- Degree Programs Section -->
      <section id="degree-programs" class="mb-12 lg:mb-16 scroll-mt-16">
        <h2 class="text-2xl lg:text-3xl font-bold mb-6 lg:mb-8 text-gray-900">
          Degree Programs
        </h2>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8">
          <!-- Degree Program 1 -->
          <article class="bg-white rounded-lg shadow-sm overflow-hidden">
            <img
              src={Santosh.src}
              alt="Santosh - Degree Program"
              class="w-full h-48 sm:h-56 lg:h-64 object-cover"
              loading="lazy"
            />
            <div class="p-4 lg:p-6">
              <h3 class="text-lg lg:text-xl font-medium text-gray-900 mb-2">
                Master's in Sustainability Science
              </h3>
              <p
                class="text-gray-700 text-sm lg:text-base leading-relaxed mb-3"
              >
                A comprehensive graduate program focusing on interdisciplinary
                approaches to sustainability challenges, combining scientific
                research with practical applications.
              </p>
              <a
                href="#"
                class="text-green-600 hover:text-green-700 underline text-sm lg:text-base font-medium"
                aria-label="Learn more about Master's in Sustainability Science"
              >
                Learn More →
              </a>
            </div>
          </article>

          <!-- Degree Program 2 -->
          <article class="bg-white rounded-lg shadow-sm overflow-hidden">
            <img
              src={sstownhall.src}
              alt="Sustainability Townhall - Degree Program"
              class="w-full h-48 sm:h-56 lg:h-64 object-cover"
              loading="lazy"
            />
            <div class="p-4 lg:p-6">
              <h3 class="text-lg lg:text-xl font-medium text-gray-900 mb-2">
                PhD in Sustainability Studies
              </h3>
              <p
                class="text-gray-700 text-sm lg:text-base leading-relaxed mb-3"
              >
                Advanced research program for scholars pursuing cutting-edge
                research in sustainability science, policy, and technology
                innovation.
              </p>
              <a
                href="#"
                class="text-green-600 hover:text-green-700 underline text-sm lg:text-base font-medium"
                aria-label="Learn more about PhD in Sustainability Studies"
              >
                Learn More →
              </a>
            </div>
          </article>
        </div>
      </section>
    </div>

    <!-- Contact Section -->
    <section class="bg-gray-50 py-8 lg:py-12" id="contact-us">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <h2
          class="text-2xl lg:text-3xl font-semibold text-gray-900 mb-6 lg:mb-8"
        >
          Contact Us
        </h2>

        <div class="space-y-6">
          <!-- Contact Link -->
          <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4">
            <span
              class="text-lg lg:text-xl font-medium text-gray-900 whitespace-nowrap"
              >G Link:</span
            >
            <a
              href="#"
              class="text-lg lg:text-xl text-green-600 hover:text-green-700 underline break-all"
            >
              sustainability@iitm.ac.in
            </a>
          </div>

          <!-- Newsletter Signup -->
          <div class="bg-white rounded-lg p-4 lg:p-6 shadow-sm">
            <h3 class="text-lg lg:text-xl font-semibold text-gray-900 mb-4">
              Subscribe to Newsletter
            </h3>
            <form class="flex flex-col sm:flex-row gap-3 sm:gap-4">
              <input
                type="text"
                placeholder="Your Name"
                class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
                required
                aria-label="Your name"
              />
              <input
                type="email"
                placeholder="Your Email"
                class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
                required
                aria-label="Your email address"
              />
              <button
                type="submit"
                class="bg-green-600 hover:bg-green-700 text-white font-medium px-6 py-2 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 whitespace-nowrap"
                aria-label="Subscribe to newsletter"
              >
                SUBSCRIBE
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

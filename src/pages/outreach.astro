---
import Layout from "../layouts/Layout.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

// Import assets
import naturesvg from "../assets/nature.svg";
import naturesvg2 from "../assets/renewable.svg";
import naturesvg3 from "../assets/Copy of EE Instrumentation Facility Visit 1 1.svg";
import indu from "../assets/Indu Photos 1.svg";
import kamaimage from "../assets/WhatsApp Image 2025-05-05 at 21.43.22_281d4de7.jpg";
import summit from "../assets/Summit on Sustainability .jpg";
import stem from "../assets/stem1.svg";
import school from "../assets/school.svg";
import rec from "../assets/Rectangle 2 (1).svg";
---

<Layout>
  <Navbar />

  <main class="min-h-screen scroll-smooth">
    <!-- Hero Section -->
    <section class="relative w-full">
      <img
        src={rec.src}
        alt="Sustainability Events and Initiatives Hero"
        class="w-full h-64 sm:h-80 md:h-96 object-cover pt-16 sm:pt-20"
        loading="eager"
      />
      <div class="absolute inset-0 bg-black bg-opacity-30"></div>
      <div
        class="absolute bottom-4 sm:bottom-8 left-4 sm:left-8 right-4 sm:right-1/2 text-white"
      >
        <h1
          class="text-xl sm:text-2xl lg:text-4xl font-bold mb-2 sm:mb-4 leading-tight"
        >
          Discover Our Sustainability Events & Initiatives
        </h1>
        <p class="text-sm sm:text-base lg:text-lg opacity-90 leading-relaxed">
          Join us in creating a sustainable future through innovative events,
          media coverage, and impactful initiatives.
        </p>
      </div>
    </section>

    <!-- Navigation Menu -->
    <section class="bg-white py-12 lg:py-16">
      <div class="container mx-auto px-4">
        <nav
          class="flex flex-col sm:flex-row justify-center items-center gap-4 sm:gap-8 text-center"
          role="navigation"
          aria-label="Page sections"
        >
          <a
            href="#events"
            class="text-green-600 hover:text-green-700 hover:-translate-y-0.5 font-medium text-lg lg:text-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 rounded px-3 py-2"
            aria-label="Navigate to Events section"
          >
            Events
          </a>
          <span class="hidden sm:inline text-green-600 text-xl">↓</span>
          <a
            href="#media"
            class="text-green-600 hover:text-green-700 hover:-translate-y-0.5 font-medium text-lg lg:text-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 rounded px-3 py-2"
            aria-label="Navigate to Media section"
          >
            Media
          </a>
          <span class="hidden sm:inline text-green-600 text-xl">↓</span>
          <a
            href="#initiatives"
            class="text-green-600 hover:text-green-700 hover:-translate-y-0.5 font-medium text-lg lg:text-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 rounded px-3 py-2"
            aria-label="Navigate to Initiatives section"
          >
            Initiatives
          </a>
        </nav>
      </div>
    </section>

    <!-- Events Section -->
    <section id="events" class="py-12 lg:py-16 scroll-mt-16">
      <div class="container mx-auto px-4">
        <!-- Section Header -->
        <div
          class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4 mb-8 lg:mb-12"
        >
          <h2 class="text-2xl lg:text-4xl font-bold text-gray-900">Events</h2>
          <div
            class="flex flex-col sm:flex-row gap-4 text-lg font-semibold text-gray-700"
          >
            <div class="flex items-center gap-2">
              <span class="text-green-600">Upcoming</span>
              <span>/</span>
              <button
                class="text-gray-500 hover:text-green-600 transition-colors duration-200"
                >Past</button
              >
            </div>
            <div class="flex items-center gap-2">
              <span>Year:</span>
              <select
                class="bg-white border border-gray-300 rounded px-3 py-1 focus:outline-none focus:ring-2 focus:ring-green-500"
              >
                <option>2025</option>
                <option>2024</option>
                <option>2023</option>
              </select>
            </div>
          </div>
        </div>

        <!-- Events Grid -->
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8"
        >
          <!-- Event Card 1 -->
          <article
            class="bg-white border-2 border-green-600 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200"
          >
            <img
              src={naturesvg.src}
              alt="SustainX ACE 2025 Event"
              class="w-full h-48 sm:h-56 object-cover"
              loading="lazy"
            />
            <div class="p-4 lg:p-6">
              <h3
                class="text-lg lg:text-xl font-medium text-gray-900 mb-3 leading-tight"
              >
                SustainX - ACE 2025 & 4th CO2India Meet - Call for abstracts and
                registration is now open!
              </h3>
              <div class="flex justify-end">
                <time
                  class="text-lg lg:text-xl font-semibold text-green-600"
                  datetime="2025-06-23"
                >
                  23 Jun 2025
                </time>
              </div>
            </div>
          </article>

          <!-- Event Card 2 -->
          <article
            class="bg-white border-2 border-green-600 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200"
          >
            <img
              src={naturesvg2.src}
              alt="SustainX Symposium Registration"
              class="w-full h-48 sm:h-56 object-cover"
              loading="lazy"
            />
            <div class="p-4 lg:p-6">
              <h3
                class="text-lg lg:text-xl font-medium text-gray-900 mb-3 leading-tight"
              >
                SustainX - ACE 2025 & 4th CO2India Meet - Symposium registration
                is now open!
              </h3>
              <div class="flex justify-end">
                <time
                  class="text-lg lg:text-xl font-semibold text-green-600"
                  datetime="2025-06-23"
                >
                  23 Jun 2025
                </time>
              </div>
            </div>
          </article>

          <!-- Event Card 3 -->
          <article
            class="bg-white border-2 border-green-600 rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200"
          >
            <img
              src={naturesvg3.src}
              alt="EE Instrumentation Facility Visit"
              class="w-full h-48 sm:h-56 object-cover"
              loading="lazy"
            />
            <div class="p-4 lg:p-6">
              <h3
                class="text-lg lg:text-xl font-medium text-gray-900 mb-3 leading-tight"
              >
                EE Instrumentation Facility Visit - Hands-on learning experience
                for sustainability students
              </h3>
              <div class="flex justify-end">
                <time
                  class="text-lg lg:text-xl font-semibold text-green-600"
                  datetime="2025-06-23"
                >
                  23 Jun 2025
                </time>
              </div>
            </div>
          </article>
        </div>
      </div>
    </section>

    <!-- Media Section -->
    <section id="media" class="py-12 lg:py-16 bg-gray-50 scroll-mt-16">
      <div class="container mx-auto px-4">
        <h2 class="text-2xl lg:text-4xl font-bold text-gray-900 mb-8 lg:mb-12">
          Media
        </h2>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8">
          <!-- Featured Media -->
          <article class="relative group cursor-pointer">
            <img
              src={kamaimage.src}
              alt="Featured sustainability media coverage"
              class="w-full h-64 sm:h-80 lg:h-96 object-cover rounded-lg"
              loading="lazy"
            />
            <div
              class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent rounded-lg"
            >
            </div>
            <div class="absolute bottom-0 left-0 right-0 p-4 lg:p-6">
              <p
                class="text-white text-base lg:text-lg font-semibold leading-relaxed mb-3"
              >
                Groundbreaking sustainability research initiatives transforming
                environmental policy and practice across academic and industry
                partnerships.
              </p>
              <button
                class="text-white hover:text-green-300 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-black rounded"
                aria-label="Share this media content"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7a3.268 3.268 0 000-1.4l7.05-4.11a2.99 2.99 0 10-.96-1.68l-7.06 4.12a2.99 2.99 0 100 4.78l7.05 4.11c.52-.48 1.2-.77 1.96-.77a3 3 0 100-6z"
                  ></path>
                </svg>
              </button>
            </div>
          </article>

          <!-- Secondary Media Grid -->
          <div class="grid grid-cols-1 gap-6">
            <!-- Media Item 2 -->
            <article class="relative group cursor-pointer">
              <img
                src={summit.src}
                alt="Sustainability Summit coverage"
                class="w-full h-48 sm:h-56 object-cover rounded-lg"
                loading="lazy"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent rounded-lg"
              >
              </div>
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <p
                  class="text-white text-sm lg:text-base font-medium leading-relaxed mb-2"
                >
                  Annual Sustainability Summit brings together global leaders
                  and innovators to address climate challenges.
                </p>
                <button
                  class="text-white hover:text-green-300 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-black rounded"
                  aria-label="Share this media content"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7a3.268 3.268 0 000-1.4l7.05-4.11a2.99 2.99 0 10-.96-1.68l-7.06 4.12a2.99 2.99 0 100 4.78l7.05 4.11c.52-.48 1.2-.77 1.96-.77a3 3 0 100-6z"
                    ></path>
                  </svg>
                </button>
              </div>
            </article>

            <!-- Media Item 3 -->
            <article class="relative group cursor-pointer">
              <img
                src={indu.src}
                alt="Student research spotlight"
                class="w-full h-48 sm:h-56 object-cover rounded-lg"
                loading="lazy"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent rounded-lg"
              >
              </div>
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <p
                  class="text-white text-sm lg:text-base font-medium leading-relaxed mb-2"
                >
                  Student researchers making breakthrough discoveries in
                  renewable energy and sustainable technologies.
                </p>
                <button
                  class="text-white hover:text-green-300 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-black rounded"
                  aria-label="Share this media content"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      d="M18 16.08c-.76 0-1.44.3-1.96.77L8.91 12.7a3.268 3.268 0 000-1.4l7.05-4.11a2.99 2.99 0 10-.96-1.68l-7.06 4.12a2.99 2.99 0 100 4.78l7.05 4.11c.52-.48 1.2-.77 1.96-.77a3 3 0 100-6z"
                    ></path>
                  </svg>
                </button>
              </div>
            </article>
          </div>
        </div>
      </div>
    </section>

    <!-- Initiatives Section -->
    <section id="initiatives" class="py-12 lg:py-16 scroll-mt-16">
      <div class="container mx-auto px-4">
        <!-- Initiatives -->
        <div class="mb-12 lg:mb-16">
          <h2
            class="text-2xl lg:text-4xl font-bold text-gray-900 mb-8 lg:mb-12"
          >
            Initiatives
          </h2>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
            <!-- Initiative 1 -->
            <article
              class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200"
            >
              <img
                src={stem.src}
                alt="STEM Education Initiative"
                class="w-full h-48 sm:h-60 object-cover"
                loading="lazy"
              />
              <div class="p-6 lg:p-8">
                <p
                  class="text-gray-700 text-base lg:text-lg leading-relaxed mb-6"
                >
                  Empowering the next generation through innovative STEM
                  education programs focused on sustainability science and
                  environmental technology.
                </p>
                <div class="flex justify-center">
                  <button
                    class="bg-green-600 hover:bg-green-700 text-white font-medium px-8 py-3 rounded-full transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
                  >
                    Learn More
                  </button>
                </div>
              </div>
            </article>

            <!-- Initiative 2 -->
            <article
              class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200"
            >
              <img
                src={school.src}
                alt="School Sustainability Program"
                class="w-full h-48 sm:h-60 object-cover"
                loading="lazy"
              />
              <div class="p-6 lg:p-8">
                <p
                  class="text-gray-700 text-base lg:text-lg leading-relaxed mb-6"
                >
                  Transforming educational institutions into models of
                  sustainability through comprehensive green campus initiatives
                  and curriculum development.
                </p>
                <div class="flex justify-center">
                  <button
                    class="bg-green-600 hover:bg-green-700 text-white font-medium px-8 py-3 rounded-full transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
                  >
                    Learn More
                  </button>
                </div>
              </div>
            </article>
          </div>
        </div>

        <!-- Entrepreneurship -->
        <div class="mb-12 lg:mb-16">
          <h2
            class="text-2xl lg:text-4xl font-bold text-gray-900 mb-8 lg:mb-12"
          >
            Entrepreneurship
          </h2>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8">
            <!-- Venture Studios -->
            <a
              href="https://indusdc.com/"
              target="_blank"
              rel="noopener noreferrer"
              class="group block border-2 border-green-400 p-6 lg:p-8 rounded-lg hover:bg-green-50 hover:border-green-500 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
            >
              <h3
                class="text-xl lg:text-2xl font-semibold text-gray-900 mb-3 group-hover:text-green-700 transition-colors duration-200"
              >
                Sustainability Venture Studios
              </h3>
              <p class="text-gray-600 text-base lg:text-lg break-all">
                https://indusdc.com/
              </p>
              <div
                class="mt-4 text-green-600 group-hover:text-green-700 font-medium"
              >
                Explore Partnership →
              </div>
            </a>

            <!-- Competitions -->
            <a
              href="https://czeroc.in/"
              target="_blank"
              rel="noopener noreferrer"
              class="group block border-2 border-green-400 p-6 lg:p-8 rounded-lg hover:bg-green-50 hover:border-green-500 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
            >
              <h3
                class="text-xl lg:text-2xl font-semibold text-gray-900 mb-3 group-hover:text-green-700 transition-colors duration-200"
              >
                Competitions
              </h3>
              <p class="text-gray-600 text-base lg:text-lg break-all">
                https://czeroc.in/
              </p>
              <div
                class="mt-4 text-green-600 group-hover:text-green-700 font-medium"
              >
                Join Competition →
              </div>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="bg-gray-50 py-12 lg:py-16" id="contact-us">
      <div class="container mx-auto px-4">
        <h2 class="text-2xl lg:text-4xl font-bold text-gray-900 mb-8 lg:mb-12">
          Contact Us
        </h2>

        <div class="space-y-8">
          <!-- Contact Information -->
          <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4">
            <span
              class="text-lg lg:text-xl font-semibold text-gray-900 whitespace-nowrap"
              >G Link:</span
            >
            <a
              href="mailto:sustainability@iitm.ac.in"
              class="text-lg lg:text-xl text-green-600 hover:text-green-700 underline break-all"
            >
              sustainability@iitm.ac.in
            </a>
          </div>

          <!-- Newsletter Signup -->
          <div class="bg-white rounded-lg p-6 lg:p-8 shadow-sm">
            <h3 class="text-lg lg:text-xl font-semibold text-gray-900 mb-6">
              Subscribe to Newsletter
            </h3>
            <form class="flex flex-col sm:flex-row gap-4">
              <input
                type="text"
                placeholder="Your Name"
                class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
                required
                aria-label="Your name"
              />
              <input
                type="email"
                placeholder="Your Email"
                class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
                required
                aria-label="Your email address"
              />
              <button
                type="submit"
                class="bg-green-600 hover:bg-green-700 text-white font-medium px-8 py-3 rounded-full transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 whitespace-nowrap"
                aria-label="Subscribe to newsletter"
              >
                SUBSCRIBE
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

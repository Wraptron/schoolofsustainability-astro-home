---
import Layout from "../layouts/Layout.astro";
import andrew from "../assets/Talk_Andrew Forrest Talk 2 (1).svg";
import man from "../assets/medium-shot-man-with-paperwork.svg";
import female from "../assets/female-student.svg";
import cert1 from "../assets/front-view-woman-holding-tablet-hand-looking-aside 1 (1).svg";
import Santosh from "../assets/Santosh Photos 1.svg";
import sstownhall from "../assets/SS Townhall  1.svg";
import "../styles/global.css";
import Newsletter from "../components/Newletter.astro";
import Footer from "../components/Footer.astro";

// SEO and meta data
const pageTitle = "Our Programs - School of Sustainability";
const pageDescription =
  "Explore our comprehensive sustainability programs including certificate courses, degree programs, and postgraduate options at IIT Madras School of Sustainability.";
---

<Layout title={pageTitle} description={pageDescription}>
  <main>
    <!-- Hero Section -->
    <section class="relative pt-20" aria-labelledby="hero-heading">
      <div class="relative">
        <img
          src={andrew.src}
          alt="Andrew Forrest speaking at sustainability event"
          class="w-full h-[40vh] sm:h-[50vh] md:h-[60vh] object-cover"
          loading="eager"
          decoding="async"
        />
        <div
          class="absolute inset-0 bg-black/40 flex items-center justify-center"
        >
          <h1
            id="hero-heading"
            class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl text-white font-bold text-center px-4 drop-shadow-lg"
          >
            Our Programs
          </h1>
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <section class="py-8 sm:py-12 md:py-16" aria-labelledby="main-content">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Tab Navigation -->
        <nav
          class="flex flex-wrap justify-center items-center gap-4 mb-8 sm:mb-12"
          aria-label="Program categories"
        >
          <a
            href="#certificate-section"
            class="text-green-600 font-medium text-lg sm:text-xl hover:text-green-700 transition-colors focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 rounded-md px-3 py-2"
            aria-describedby="certificate-description"
          >
            Certificate Courses
          </a>
          <span class="text-gray-400 hidden sm:inline" aria-hidden="true"
            >|</span
          >
          <a
            href="#degree-section"
            class="text-green-600 font-medium text-lg sm:text-xl hover:text-green-700 transition-colors focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 rounded-md px-3 py-2"
            aria-describedby="degree-description"
          >
            Degree Programs
          </a>
        </nav>

        <!-- Certificate Courses Section -->
        <section
          id="certificate-section"
          class="mb-16 sm:mb-20"
          aria-labelledby="certificate-heading"
        >
          <h2
            id="certificate-heading"
            class="text-2xl sm:text-3xl md:text-4xl font-bold mb-8 text-gray-800 text-center"
          >
            Certificate Courses
          </h2>

          <!-- Main Certificate Course -->
          <div
            class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 mb-12 sm:mb-16"
          >
            <div class="order-2 lg:order-1">
              <img
                src={cert1.src}
                alt="Woman holding tablet representing digital learning for sustainability certificate"
                class="w-full h-64 sm:h-80 md:h-96 object-cover rounded-lg shadow-md"
                loading="lazy"
                decoding="async"
              />
            </div>

            <div
              class="order-1 lg:order-2 flex flex-col justify-center space-y-4 sm:space-y-6"
            >
              <h3
                class="text-xl sm:text-2xl md:text-3xl font-semibold text-gray-800 mb-4"
              >
                Minor in Sustainability
              </h3>
              <p class="text-base sm:text-lg text-gray-700 leading-relaxed">
                We offer a Minor in Sustainability to all undergraduate students
                of IIT Madras. By completing any 4 courses from our basket of
                ~30 ongoing courses, students gain the opportunity to build a
                multidimensional understanding of sustainability by delving
                deeper into environmental, social, and economic challenges of
                our time.
              </p>
              <p class="text-sm sm:text-base text-gray-600">
                Learn "Why is this Minor for you!" in our comprehensive guide.
              </p>
              <a
                href="https://sustainability.iitm.ac.in/Minor-in-Sustainability-Final-compressed.pdf"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block border-2 border-green-600 text-gray-800 hover:bg-green-600 hover:text-white font-semibold rounded-lg text-lg px-6 py-3 transition-all duration-300 ease-in-out hover:-translate-y-0.5 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
                aria-describedby="brochure-description"
              >
                View Brochure
                <span class="sr-only"> (opens in new tab)</span>
              </a>
              <span id="brochure-description" class="sr-only">
                Download the comprehensive brochure for Minor in Sustainability
                program
              </span>
            </div>
          </div>

          <!-- Additional Certificate Cards -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12">
            <article
              class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300"
            >
              <img
                src={man.src}
                alt="Professional working with environmental documents and paperwork"
                class="w-full h-48 sm:h-64 md:h-72 object-cover"
                loading="lazy"
                decoding="async"
              />
              <div class="p-6 sm:p-8">
                <h4 class="text-lg sm:text-xl font-semibold mb-4 text-gray-800">
                  ID Core Course: Ecology and Environment
                </h4>
                <p class="text-base sm:text-lg text-gray-700 leading-relaxed">
                  The mandatory undergraduate course "ID1200 Ecology and
                  Environment" is designed to sensitize students towards
                  real-world sustainability scenarios. Offered as a flipped
                  classroom, this interdisciplinary course covers the
                  fundamentals of sustainability (climate change, ecosystems,
                  energy, waste, economics, and ethics) as well as their applied
                  aspects (natural resource management, environmental impact
                  assessment, Life Cycle Analysis).
                </p>
              </div>
            </article>

            <article
              class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300"
            >
              <img
                src={female.src}
                alt="Female student engaged in sustainability studies"
                class="w-full h-48 sm:h-64 md:h-72 object-cover"
                loading="lazy"
                decoding="async"
              />
              <div class="p-6 sm:p-8">
                <h4
                  class="text-xl sm:text-2xl font-semibold mb-4 text-gray-800"
                >
                  Executive Education
                </h4>
                <p
                  class="text-base sm:text-lg text-gray-700 leading-relaxed mb-4"
                >
                  A comprehensive 6-week online Certificate Programme that takes
                  a multidimensional approach to sustainability. Targeted at
                  mid-career industry professionals, this case study-rich
                  program helps develop critical knowledge of existing and
                  upcoming sustainability frameworks and business implications
                  of India's shifting policy landscape, building confidence and
                  competence in implementing sustainability within respective
                  business ecosystems.
                </p>
                <a
                  href="../assets/Programs/Course - Sustainability for Indian Businesses_3.pdf"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-block text-green-600 hover:text-green-700 font-medium transition-colors text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 rounded-md"
                >
                  View Course Details â†’
                  <span class="sr-only"> (opens in new tab)</span>
                </a>
              </div>
            </article>
          </div>
        </section>

        <!-- Degree Programs Section -->
        <section
          id="degree-section"
          class="mb-16 sm:mb-20"
          aria-labelledby="degree-heading"
        >
          <h2
            id="degree-heading"
            class="text-2xl sm:text-3xl md:text-4xl font-bold mb-8 text-gray-800 text-center"
          >
            Postgraduate Programs
          </h2>
          <p
            class="text-center text-gray-700 mb-10 max-w-4xl mx-auto text-base sm:text-lg"
          >
            IIT Madras offers several postgraduate programs in the area of
            sustainability. These programs are designed to develop expertise in
            various aspects of sustainable development and environmental
            management.
          </p>

          <!-- First Row: Environmental Engineering & Hydraulics -->
          <div
            class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 mb-8 sm:mb-12"
          >
            <!-- Environmental Engineering -->
            <article
              class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
            >
              <div class="relative overflow-hidden">
                <!-- <img
                  src={EnvironmentalEngImg.src}
                  alt="Environmental Engineering laboratory and research facilities"
                  class="w-full h-48 sm:h-56 md:h-64 object-cover transition-transform duration-300 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                /> -->
                <div
                  class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"
                >
                </div>
              </div>
              <div class="p-6 sm:p-8">
                <h3
                  class="text-xl sm:text-2xl font-bold mb-4 text-gray-800 leading-tight"
                >
                  Environmental Engineering
                </h3>
                <p
                  class="text-base sm:text-lg text-gray-700 leading-relaxed mb-6"
                >
                  IIT Madras offers a 2-year M.Tech program, M.S (Masters by
                  Research), and PhD program in environmental engineering.
                  Students are exposed to concepts related to water
                  conservation, air quality, waste management, and circularity.
                </p>
                <a
                  href="https://civil.iitm.ac.in/ee/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-green-600 hover:text-green-700 font-semibold transition-colors duration-200 underline decoration-2 underline-offset-4 hover:decoration-green-700 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 rounded-md"
                >
                  Program Details and Application Information
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    ></path>
                  </svg>
                  <span class="sr-only"> (opens in new tab)</span>
                </a>
              </div>
            </article>

            <!-- Hydraulics and Water Resources Engineering -->
            <article
              class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
            >
              <div class="relative overflow-hidden">
                <!-- <img
                  src={HydraulicsImg.src}
                  alt="Hydraulics and water resources engineering projects"
                  class="w-full h-48 sm:h-56 md:h-64 object-cover transition-transform duration-300 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                /> -->
                <div
                  class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"
                >
                </div>
              </div>
              <div class="p-6 sm:p-8">
                <h3
                  class="text-xl sm:text-2xl font-bold mb-4 text-gray-800 leading-tight"
                >
                  Hydraulics and Water Resources Engineering
                </h3>
                <p
                  class="text-base sm:text-lg text-gray-700 leading-relaxed mb-6"
                >
                  IIT Madras offers a 2-year M.Tech program, M.S (Masters by
                  Research), and PhD program in Hydraulics and Water Resources
                  Engineering. Students are exposed to hydrology, water
                  resources management, hydraulic engineering, flood management,
                  and disaster mitigation.
                </p>
                <a
                  href="https://civil.iitm.ac.in/hwre/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-green-600 hover:text-green-700 font-semibold transition-colors duration-200 underline decoration-2 underline-offset-4 hover:decoration-green-700 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 rounded-md"
                >
                  Program Details and Application Information
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    ></path>
                  </svg>
                  <span class="sr-only"> (opens in new tab)</span>
                </a>
              </div>
            </article>
          </div>

          <!-- Second Row: Energy Systems & Atmospheric Sciences -->
          <div
            class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 mb-8 sm:mb-12"
          >
            <!-- Energy Systems -->
            <article
              class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
            >
              <div class="relative overflow-hidden">
                <!-- <img
                  src={EnergySystemsImg.src}
                  alt="Energy systems and renewable energy technology"
                  class="w-full h-48 sm:h-56 md:h-64 object-cover transition-transform duration-300 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                /> -->
                <div
                  class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"
                >
                </div>
              </div>
              <div class="p-6 sm:p-8">
                <h3
                  class="text-xl sm:text-2xl font-bold mb-4 text-gray-800 leading-tight"
                >
                  Energy Systems
                </h3>
                <p
                  class="text-base sm:text-lg text-gray-700 leading-relaxed mb-6"
                >
                  IIT Madras offers an Interdisciplinary Dual Degree Programme
                  in Energy Systems. Undergraduate students with minimum
                  academic performance can apply in their fifth semester. The
                  program covers Thermal Energy Conversion, Renewable Energy
                  Technology, Materials for Energy Storage and Conversion, and
                  Energy Economics.
                </p>
                <a
                  href="https://ioe.iitm.ac.in/program/energy-systems/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-green-600 hover:text-green-700 font-semibold transition-colors duration-200 underline decoration-2 underline-offset-4 hover:decoration-green-700 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 rounded-md"
                >
                  Program Details and Application Information
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    ></path>
                  </svg>
                  <span class="sr-only"> (opens in new tab)</span>
                </a>
              </div>
            </article>

            <!-- Atmospheric and Climate Sciences -->
            <article
              class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
            >
              <div class="relative overflow-hidden">
                <!-- <img
                  src={ClimateImg.src}
                  alt="Atmospheric and climate sciences research"
                  class="w-full h-48 sm:h-56 md:h-64 object-cover transition-transform duration-300 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                /> -->
                <div
                  class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"
                >
                </div>
              </div>
              <div class="p-6 sm:p-8">
                <h3
                  class="text-xl sm:text-2xl font-bold mb-4 text-gray-800 leading-tight"
                >
                  Atmospheric and Climate Sciences
                </h3>
                <p
                  class="text-base sm:text-lg text-gray-700 leading-relaxed mb-6"
                >
                  IIT Madras offers an Interdisciplinary Dual Degree program in
                  Atmospheric and Climate Sciences. This program provides
                  detailed understanding of atmospheric processes and
                  interactions from molecular to global scale, improving
                  knowledge about climate change.
                </p>
                <a
                  href="https://cacs.iitm.ac.in/programs-iddd.php"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-green-600 hover:text-green-700 font-semibold transition-colors duration-200 underline decoration-2 underline-offset-4 hover:decoration-green-700 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 rounded-md"
                >
                  Program Details and Application Information
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    ></path>
                  </svg>
                  <span class="sr-only"> (opens in new tab)</span>
                </a>
              </div>
            </article>
            <article
              class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
            >
              <div class="relative overflow-hidden">
                <!-- <img
                  src={ClimateImg.src}
                  alt="Atmospheric and climate sciences research"
                  class="w-full h-48 sm:h-56 md:h-64 object-cover transition-transform duration-300 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                /> -->
                <div
                  class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"
                >
                </div>
              </div>
              <div class="p-6 sm:p-8">
                <h3
                  class="text-xl sm:text-2xl font-bold mb-4 text-gray-800 leading-tight"
                >
                  Atmospheric and Climate Sciences
                </h3>
                <p
                  class="text-base sm:text-lg text-gray-700 leading-relaxed mb-6"
                >
                  IIT Madras offers an Interdisciplinary Dual Degree program in
                  Atmospheric and Climate Sciences. This program provides
                  detailed understanding of atmospheric processes and
                  interactions from molecular to global scale, improving
                  knowledge about climate change.
                </p>
                <a
                  href="https://cacs.iitm.ac.in/programs-iddd.php"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-green-600 hover:text-green-700 font-semibold transition-colors duration-200 underline decoration-2 underline-offset-4 hover:decoration-green-700 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 rounded-md"
                >
                  Program Details and Application Information
                  <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    ></path>
                  </svg>
                  <span class="sr-only"> (opens in new tab)</span>
                </a>
              </div>
            </article>
          </div>

          <!-- Third Row: ABCD Program (Centered) -->
          <div class="flex justify-center">
            <article
              class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 w-full max-w-2xl"
            >
              <div class="relative overflow-hidden">
                <!-- <img
                  src={ABCDImg.src}
                  alt="ABCD program collaboration between international universities"
                  class="w-full h-48 sm:h-56 md:h-64 object-cover transition-transform duration-300 hover:scale-105"
                  loading="lazy"
                  decoding="async"
                /> -->
                <div

---
import Layout from "../layouts/Layout.astro";
import Navbar from "@/components/Navbar.astro";
import Newletter from "../components/Newletter.astro";
import Footer from "../components/Footer.astro";
import NewLetter from "../components/Newletter.astro";
import Home from "../components/Home.astro";
import "../styles/global.css";
---

<Navbar />
<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <h1 class="text-4xl font-bold text-gray-900 text-center mb-12">
      Organisation
    </h1>

    <!-- Policy Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <!-- Diversity, Equity and Inclusion (DEI) -->
      <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">
          Advisory Council on Sustainability
        </h2>
        <div class="flex gap-3">
          <button
                  onclick="window.location.href='/organisation/advisory-council-on-sustainability'"
            class="flex-1 bg-green-700 hover:bg-green-800 text-white font-medium py-3 px-4 rounded-md transition-colors"
          >
            Learn More
          </button>
        </div>
      </div>

      <!-- Policy for Sustainable Purchases -->
      <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">
          Environment Management Committee
        </h2>
        <div class="flex gap-3">
          <button
           onclick="window.location.href='/organisation/environment-management'"
            class="flex-1 bg-green-700 hover:bg-green-800 text-white font-medium py-3 px-4 rounded-md transition-colors"
          >
            Learn More
          </button>
        </div>
      </div>

      <!-- Sustainable Investment Policy -->
      <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Governance</h2>
        <div class="flex gap-3">
          <button
                  onclick="window.location.href='/organisation/governance'"
            class="flex-1 bg-green-700 hover:bg-green-800 text-white font-medium py-3 px-4 rounded-md transition-colors"
          >
            Learn More
          </button>
        </div>
      </div>

      <!-- Anti-Corruption Policy -->
      <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">
          Student Committee
        </h2>
        <div class="flex gap-3">
          <button
            class="flex-1 bg-green-700 hover:bg-green-800 text-white font-medium py-3 px-4 rounded-md transition-colors"
          >
            Learn More
          </button>
        </div>
      </div>

      <!-- Ethics & Code of Conduct -->
      <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">
          Ethics & Code of Conduct
        </h2>
        <div class="flex gap-3">
          <button
            class="flex-1 bg-green-700 hover:bg-green-800 text-white font-medium py-3 px-4 rounded-md transition-colors"
          >
            2025 Policy
          </button>
          <button
            class="flex-1 bg-green-700 hover:bg-green-800 text-white font-medium py-3 px-4 rounded-md transition-colors"
          >
            2024 Policy
          </button>
        </div>
      </div>

      <!-- Carbon Footprint Report -->
      <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">
          Carbon Footprint Report
        </h2>
        <button
          class="w-full bg-green-700 hover:bg-green-800 text-white font-medium py-3 px-4 rounded-md transition-colors"
        >
          Learn More
        </button>
      </div>
    </div>

    <!-- Co2 Footprint Report 2024 - Centered bottom card -->
    <div class="max-w-md mx-auto">
      <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">
          Co2 Footprint Report 2024
        </h2>
        <button
          class="w-full bg-green-700 hover:bg-green-800 text-white font-medium py-3 px-4 rounded-md transition-colors"
        >
          Learn More
        </button>
      </div>
    </div>
  </div>
</div>
<Newletter />
<Footer />

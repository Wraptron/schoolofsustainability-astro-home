---
import Layout from "@/layouts/Layout.astro";

import Footer from "@/components/Footer.astro";
import "../styles/global.css";

// Import images
import summit from "../assets/Summit on Sustainability .jpg";
import icssrconf from "../assets/ICSSR Conference_2 (1) 1.svg";
// import publicationcharuta from "../assets/Publication_Charuta 1.svg";
// import publicationsantosh from "../assets/Publication_Santosh 1.svg";
// import screenshot from "../assets/Screenshot 2025-05-05 194551 1.svg";

import newsletter from "../assets/Screenshot 2025-05-05 085703 1.svg";
import publication from "../assets/SfIB Cohort_1 3.svg";
import kh from "../assets/knowledge hub page 1 image.jpg";
import Newletter from "@/components/Newletter.astro";
import Whitepaper from "../assets/white_papers/cxo.pdf.png";

import Reprot1 from "../../public/pdf/Report - Razanatsoa et al 2025_DiverseK Madagascar Workshop Report (1).pdf";
import Report_image from "../assets/Reports_images/Report - Industry Dialogue on ESG - Chennai Workshop Proceedings.jpg";
import { Images } from "lucide-react";

// Sample data - in a real app, this would come from a CMS or API
const articles = [

---
import Layout from "@/layouts/Layout.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import "../styles/global.css";
---

<Layout>
  <Navbar />

  <!-- Hero Slider -->
  <section class="relative">
    <img src="" alt="Hero Image" class="w-full h-96 object-cover" />
    <div class="absolute inset-0 bg-gray-100 bg-opacity-50 flex items-center justify-center text-white text-2xl font-semibold">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit.
    </div>
  </section>

  <!-- Tabs -->
  <div class="flex justify-center mt-4 space-x-4 text-green-600 font-medium">
    <a href="#articles">Articles</a>
    <a href="#publications">Publication</a>
    <a href="#newsletter">Newsletter</a>
    <a href="#report">Reports</a>
    <a href="#whitepaper">White Paper</a>
  </div>

  <!-- Articles Section -->
  <section id="articles" class="max-w-7xl mx-auto px-4 py-10">
    <h2 class="text-2xl font-bold mb-6">Articles</h2>
    <div class="grid md:grid-cols-2 gap-6">
      <div>
        <img src="/images/article1.jpg" alt="Article 1" class="rounded-lg h-56 object-cover w-full" />
        <p class="mt-2 text-sm text-gray-500">Tuesday, April 1, 2025</p>
        <h3 class="text-lg font-semibold mt-1">A Cost Effective Method to Treat Pollutants</h3>
        <p class="text-sm text-gray-600">
          Treatment of dye effluents and tannery effluents using advanced processes...
        </p>
      </div>
      <div>
        <img src="/images/article2.jpg" alt="Article 2" class="rounded-lg h-56 object-cover w-full" />
        <p class="mt-2 text-sm text-gray-500">Tuesday, April 1, 2025</p>
        <h3 class="text-lg font-semibold mt-1">The Right Price</h3>
        <p class="text-sm text-gray-600">
          With global climate changes, does a firm lean towards reduced emissions?
        </p>
      </div>
    </div>
  </section>

  <!-- Publications Section -->
  <section id="publications" class="max-w-7xl mx-auto px-4 py-10">
    <h2 class="text-2xl font-bold mb-6">Publications</h2>
    <div class="grid md:grid-cols-3 gap-6">
      <img src="/images/pub1.jpg" alt="Publication 1" class="rounded-lg w-full h-72 object-cover" />
      <img src="/images/pub2.jpg" alt="Publication 2" class="rounded-lg w-full h-72 object-cover" />
      <img src="/images/pub3.jpg" alt="Publication 3" class="rounded-lg w-full h-72 object-cover" />
    </div>
  </section>

  <!-- Newsletter Section -->
  <section id="newsletter" class="max-w-7xl mx-auto px-4 py-10">
    <h2 class="text-2xl font-bold mb-6">Newsletter</h2>
    <div class="grid md:grid-cols-2 gap-8">
      <div>
        <img src="/images/newsletter.jpg" alt="Newsletter" class="rounded-lg h-80 object-cover w-full" />
      </div>
      <div>
        <p class="text-gray-700 mb-4">
          Tuesday, April 1, 2025<br />
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean commodo ligula eget dolor...
        </p>
        <form class="space-y-4">
          <div>
            <label class="block mb-1">Name</label>
            <input type="text" class="w-full border px-4 py-2 rounded" />
          </div>
          <div>
            <label class="block mb-1">Email</label>
            <input type="email" class="w-full border px-4 py-2 rounded" />
          </div>
          <button class="bg-green-600 text-white px-6 py-2 rounded">SUBSCRIBE</button>
        </form>
      </div>
    </div>
  </section>

  <!-- Report Section -->
  <section id="report" class="bg-green-900 text-white py-10">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-2xl font-bold mb-4">Report</h2>
      <p class="mb-6">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa...
      </p>
      <div class="grid md:grid-cols-3 gap-6">
        <img src="/images/report1.jpg" alt="Report Image" class="rounded-lg h-56 object-cover w-full" />
        <img src="/images/report2.jpg" alt="Report Image" class="rounded-lg h-56 object-cover w-full" />
        <img src="/images/report3.jpg" alt="Report Image" class="rounded-lg h-56 object-cover w-full" />
      </div>
    </div>
  </section>

  <!-- White Paper Section -->
  <section id="whitepaper" class="max-w-7xl mx-auto px-4 py-10">
    <h2 class="text-2xl font-bold mb-6">White Paper</h2>
    <div class="grid md:grid-cols-4 gap-4">
      {Array(4).fill(0).map(() => (
        <div class="relative group">
          <img src="/images/whitepaper.jpg" class="rounded-lg h-56 w-full object-cover" />
          <div class="absolute inset-0 bg-black bg-opacity-40 text-white p-3 flex items-end rounded-lg opacity-0 group-hover:opacity-100 transition">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Contact Us -->
  <section class="max-w-7xl mx-auto px-4 py-12">
    <h2 class="text-2xl font-bold mb-4">Contact Us</h2>
    <p class="mb-4">
      ðŸ”— Link: <a href="#" class="text-green-600 underline">Lorem ipsum dolor sit amet, consectetur elit.</a>
    </p>
    <form class="flex space-x-4 max-w-md">
      <input type="text" placeholder="Name" class="flex-1 border px-4 py-2 rounded" />
      <input type="email" placeholder="Email" class="flex-1 border px-4 py-2 rounded" />
      <button class="bg-green-600 text-white px-6 py-2 rounded">SUBSCRIBE</button>
    </form>
  </section>

  <!-- Footer -->
  <Footer />
</Layout>

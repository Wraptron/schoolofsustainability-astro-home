        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa...

      </p>
      <div class="grid md:grid-cols-3 gap-6">
        <img src={publication.src} alt="Report Image" class="rounded-lg h-56 object-cover w-full" />
        <img src={publication.src} alt="Report Image" class="rounded-lg h-56 object-cover w-full" />
        <img src={publication.src} alt="Report Image" class="rounded-lg h-56 object-cover w-full" />
      </div>
    </div>
  </section>

  <!-- White Paper Section -->
  <section id="whitepaper" class="max-w-7xl mx-auto px-4 py-10">
    <h2 class="text-2xl font-bold mb-6">White Paper</h2>
    <div class="grid md:grid-cols-4 gap-4">
      {Array(4).fill(0).map(() => (
        <div class="relative group">
          <img src="/images/whitepaper.jpg" class="rounded-lg h-56 w-full object-cover" />
          <div class="absolute inset-0 bg-black bg-opacity-40 text-white p-3 flex items-end rounded-lg opacity-0 group-hover:opacity-100 transition">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Contact Us -->
  <section class="max-w-7xl mx-auto px-4 py-12">
    <h2 class="text-2xl font-bold mb-4">Contact Us</h2>
    <p class="mb-4">
      ðŸ”— Link: <a href="#" class="text-green-600 underline">Lorem ipsum dolor sit amet, consectetur elit.</a>
    </p>
    <form class="flex space-x-4 max-w-md">
      <input type="text" placeholder="Name" class="flex-1 border px-4 py-2 rounded" />
      <input type="email" placeholder="Email" class="flex-1 border px-4 py-2 rounded" />
      <button class="bg-green-600 text-white px-6 py-2 rounded">SUBSCRIBE</button>
    </form>
  </section>

  <!-- Footer -->
  <Footer />
</Layout>
